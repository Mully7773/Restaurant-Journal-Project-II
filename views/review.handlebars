{{!-- Code for review template --}}


<div class="card mx-auto border border-primary justify-content-center p-4 mt-5" style="width: 35rem;">
      <form>
  <div class="form-group ">
    <label>Where did you go?</label>
    <input type="text" class="form-control" id="restaurant-name" aria-describedby="restaurantName" placeholder="Enter a restaurant name...">
    <small class="form-text text-muted"></small>
  </div>
  <div class="form-group">
    <label>What did you order?</label>
    <input type="text" class="form-control" id="order-name" placeholder="Chicken alfredo, shrimp linguini...">
  </div>
  <div class="form-group">
    <label>How would you rate it?</label>
    <input type="text" class="form-control" id="your-rating" placeholder="5 stars...">
  </div>
  <div class="form-group">
    <label>What was your overall experience?</label>
    <input type="text" class="form-control" id="your-experience" placeholder="Loved it!">
  </div>
  <div class= "col text-center">
  <button type="submit" class="btn btn-primary m-3 ">Submit</button>
  </div>
</form>
</div>